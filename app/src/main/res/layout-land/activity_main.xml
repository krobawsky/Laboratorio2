<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="900dp"
            android:layout_height="365dp"
            app:srcCompat="@drawable/portada_musica"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="208dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textSize="35dp"
            android:text="@string/title"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="8dp" />


        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="380dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.337"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:onClick="onClick"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/dy" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="162dp"
                        android:text="@string/album1" />

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="160dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="180dp"
                        android:text="@string/songs1"
                        android:textSize="12dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="380dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/coraz_n_serrano" />

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="162dp"
                        android:text="@string/album2" />

                    <TextView
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="180dp"
                        android:text="@string/songs2"
                        android:textSize="12dp" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="160dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="380dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0.983"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="162dp"
                        android:text="@string/album4" />

                    <TextView
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="180dp"
                        android:text="@string/songs4"
                        android:textSize="12dp" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/grupo5" />

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="160dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_more_vert_black_24dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="380dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.66"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="162dp"
                        android:text="@string/album3" />

                    <TextView
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="180dp"
                        android:text="@string/songs3"
                        android:textSize="12dp" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/jauz" />

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="160dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_more_vert_black_24dp" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>


    </android.support.constraint.ConstraintLayout>


</ScrollView>